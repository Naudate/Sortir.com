{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <form method="get" action="{{ path('app_home') }}">

        <label for="nom">Rechercher par nom :</label>
        <input type="text" id="nom" name="nom" value="{{ app.request.get('nom') }}">

        <label for="dateDebut">Date de début :</label>
        <input type="date" id="dateDebut" name="dateDebut" value="{{ dateDebut }}">
        <label for="dateFin">Date de fin :</label>
        <input type="date" id="dateFin" name="dateFin" value="{{ dateFin }}">
<br>
        <label for="organisateur">sortie orga</label>
        <input type="checkbox" id="organisateur" name="organisateur">
        <label for="voirSortiesPassees">Voir les sorties passées :</label>
        <input type="checkbox" id="voirSortiesPassees" name="voirSortiesPassees" {% if app.request.get('voirSortiesPassees') %}checked{% endif %}>



        <button type="submit">Filtrer</button>
    </form>
        <table>
        <tr>
                    <td>Nom</td>
                    <td>Date début</td>
                    <td>Date fin</td>
                    <td>Clôture inscription</td>
                    <td>Nb inscrits/Nb places</td>
                    <td>Etat</td>
                    <td>Inscrit/e</td>
                    <td>Organisateur</td>
                    <td>Actions</td>
                </tr>
            {% for sortie in sorties %}
            <tr>
                <td>{{sortie.nom}}</td>
                <td>{{sortie.dateHeureDebut |date("d/m/Y H:i")}}</td>
                <td>{{sortie.dateHeureFin |date("d/m/Y H:i")}}</td>
                <td>{{sortie.dateLimiteInscription |date("d/m/Y")}}</td>
                <td>{{sortie.participant |length}} / {{sortie.nombreMaxParticipant}} </td>
                <td> {{sortie.etat}} </td>
                <td> {% if app.user in sortie.participant %}
                        <input type="checkbox" checked disabled>
                    {% else %}
                        <input type="checkbox" disabled>
                    {% endif %} </td>
                <td> {{sortie.organisateur.nom}}  {{sortie.organisateur.prenom}} </td>
                <td>
                    {% if sortie.getDateLimiteInscription > dateActuelle %}
                        {% if app.user in sortie.participant %}
                            <a href="{{ path('sortie_register', {'id' : sortie.id}) }}">Se désister</a>
                        {% else %}
                            <a href="{{ path('sortie_register', {'id' : sortie.id}) }}">S'inscrire</a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>


{% endblock %}
