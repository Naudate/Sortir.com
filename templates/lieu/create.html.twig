{% extends 'base.html.twig' %}
{% block title %}Création d'un lieu{% endblock %}

{% block body %}
<div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 sm:py-12 lg:px-8">
    <div class="mx-auto max-w-2xl">

        {% for message in app.flashes('success') %}
            <p class="mt-1 text-sm leading-6 text-green-700">{{ message }}</p>
        {% endfor %}
        <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base font-semibold leading-7 text-gray-900">
                    Création d'un lieu
                </h2>
                <p class="mt-1 text-sm leading-6 text-gray-600">
                    Espace pour la création d'un lieu.
                </p>
                <div>
                    {{ form_start(lieuForm) }}
                    <div class="border-b pb-6">
                        <div class="mt-6 border-gray-100">
                            {{ form_label(lieuForm.nom, null, {
                                'label_attr' : { 'class': 'after:content-["*"] after:ml-0.5
                                 after:text-red-500 text-gray-800'}
                            }) }}
                            {{ form_errors(lieuForm.nom) }}
                            {{ form_widget(lieuForm.nom) }}
                            {{ form_help(lieuForm.nom) }}
                        </div>
                        <div class="mt-6 border-gray-100">
                            {{ form_label(lieuForm.rue, null, {
                                'label_attr' : { 'class': 'after:content-["*"] after:ml-0.5
                                 after:text-red-500 text-gray-800'}
                            }) }}
                            {{ form_errors(lieuForm.rue) }}
                            {{ form_widget(lieuForm.rue) }}
                            {{ form_help(lieuForm.rue) }}
                        </div>
                        <div class="mt-6 border-gray-100">
                            {{ form_label(lieuForm.ville, null, {
                                'label_attr' : { 'class': 'after:content-["*"] after:ml-0.5
                                 after:text-red-500 text-gray-800'}
                            }) }}
                            {{ form_errors(lieuForm.ville) }}
                            {{ form_widget(lieuForm.ville) }}
                            {{ form_help(lieuForm.ville) }}
                        </div>
                        <div class="mt-6 border-gray-100">
                            {{ form_label(lieuForm.latitude, null, {
                                'label_attr' : { 'class': 'text-gray-800'}
                            }) }}
                            {{ form_errors(lieuForm.latitude) }}
                            {{ form_widget(lieuForm.latitude) }}
                            {{ form_help(lieuForm.latitude) }}
                        </div>
                        <div class="mt-6 border-gray-100">
                            {{ form_label(lieuForm.longitude, null, {
                                'label_attr' : { 'class': 'text-gray-800'}
                            }) }}
                            {{ form_errors(lieuForm.longitude) }}
                            {{ form_widget(lieuForm.longitude) }}
                            {{ form_help(lieuForm.longitude) }}
                        </div>
                    </div>
                    <div>
                        <div class="mt-6 flex items-center justify-end gap-x-3">
                            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2
             text-sm font-semibold text-white shadow-sm hover:bg-indigo-500
             focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2
             focus-visible:outline-indigo-600">
                                Ajouter un lieu
                            </button>
                            <button type="button" class="btn" id="closeModal" hidden>Annuler</button>
                        </div>
                    </div>
                    {{ form_end(lieuForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
